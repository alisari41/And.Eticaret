@model And.Eticaret.Core.Model.Entity.Category

@{
    ViewBag.Title = "Edit";
}
<br />
<h2 style="margin-left:30px">Kategori Güncelle</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="form-group">
            @Html.LabelFor(model => model.ParentID, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                @Html.EditorFor(model => model.ParentID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ParentID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-3" })*@
            <label class="control-label col-md-3">Kategori Adı</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-3" })*@
            <label class="control-label col-md-3">IsActive   </label>
            <div class="col-md-9">
                <div class="checkbox">
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.CreateDate, htmlAttributes: new { @class = "control-label col-md-3" })*@
            <label class="control-label col-md-3">Oluşturma Tarihi</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.CreateDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CreateDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.CreateUserID, htmlAttributes: new { @class = "control-label col-md-3" })*@
            <label class="control-label col-md-3">Oluşturan Kullanıcı Id</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.CreateUserID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CreateUserID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.UpdateDate, htmlAttributes: new { @class = "control-label col-md-3" })*@
            <label class="control-label col-md-3">Güncelleme Tarihi</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.UpdateDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UpdateDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @*@Html.LabelFor(model => model.UpdateUserID, htmlAttributes: new { @class = "control-label col-md-3" })*@
            <label class="control-label col-md-3">Güncelleyen Kullanıcı Id</label>
            <div class="col-md-9">
                @Html.EditorFor(model => model.UpdateUserID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.UpdateUserID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-3 col-md-9">
                <button  type="submit" value="Save" class="btn btn-default guncellemebuton"  style = "border: 2px solid green;"><i class="fas fa-pen-alt" style="color:red"></i> Güncelle</button>
            </div>
        </div>
    </div>
}
<br />
<div>
    @Html.ActionLink(" Geri Dön", "Index", new { }, new { @class = "btn btn-default fas fa-backward detaylamabuton ", style = "border: 2px solid #39ded8;" })
</div>
<br /><br /><br />
<br /><br /><br />
<style>
    .guncellemebuton {
        -webkit-transition-duration: 0.4s;
        transition-duration: 0.4s;
        color: green;
        background-color: white;
    }

        .guncellemebuton:hover {
            background-color: green;
            color: white;
        }

    .detaylamabuton {
        -webkit-transition-duration: 0.4s;
        color: #39ded8;
        transition-duration: 0.4s;
    }

        .detaylamabuton:hover {
            background-color: #1e4e4c;
            color: white;
        }
</style>