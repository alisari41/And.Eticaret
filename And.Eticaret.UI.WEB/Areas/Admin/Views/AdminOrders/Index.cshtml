@model IEnumerable<And.Eticaret.Core.Model.Entity.Order>

@{
    ViewBag.Title = "Index";
}

<h2>Siparişler</h2>

<p>


    @Html.ActionLink(" Yeni Sipariş Ekle", "Create", new { }, new { @class = "btn btn-danger fas fa-plus" })
</p>
<div class="table-responsive">
    <table class="table table-hover table-sm table-bordered">
        <tr>
            <th>
                Durum
                @*@Html.DisplayNameFor(model => model.Status.Name)*@
            </th>
            <th>
                Ad Soyad E-mail
                @*@Html.DisplayNameFor(model => model.User.Name)*@
            </th>
            <th>
                Baslık
                @*@Html.DisplayNameFor(model => model.UserAddress.Title)*@
            </th>
            <th>
                ToplamÜrünFiyatı
                @*@Html.DisplayNameFor(model => model.TotalProductPrice)*@
            </th>
            <th>
                ToplamVergiFiyatı
                @*@Html.DisplayNameFor(model => model.TotalTaxPrice)*@
            </th>
            <th>
                Toplamİndirim
                @*@Html.DisplayNameFor(model => model.TotalDiscount)*@
            </th>
            <th>
                ToplamFiyat
                @*@Html.DisplayNameFor(model => model.TotalPrice)*@
            </th>
            <th>
                OluşturmaTarihi
                @*@Html.DisplayNameFor(model => model.CreateDate)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreateUserID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateUserID)
            </th>
            <th>Güncelle</th>
            <th>Detay</th>
            <th>Sil</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Status.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.User.Name)
                    @Html.DisplayFor(modelItem => item.User.LastName)
                    @Html.DisplayFor(modelItem => item.User.Email)-
                    @Html.DisplayFor(modelItem => item.User.Telephone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UserAddress.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalTaxPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalDiscount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateUserID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateUserID)
                </td>
                <td>
                    @Html.ActionLink(" Güncelle", "Edit", new { id = item.ID }, new { @class = "btn fas fa-edit guncellemebuton", style = "border: 2px solid green;" })
                </td>
                <td>
                    @Html.ActionLink(" Detay", "Details", new { id = item.ID }, new { @class = "btn btn-circle fas fa-info detaylamabuton", style = "border: 2px solid #39ded8;" })
                </td>
                <td>
                    @Html.ActionLink(" Sil", "Delete", new { id = item.ID }, new { @class = "btn btn-circle fas fa-trash-alt silmebuton", style = "border: 2px solid red;" })
                </td>
            </tr>
        }

    </table>
</div>

<br />
<br />
<br />
<br />
<br />
<br />
<style>
    .guncellemebuton {
        -webkit-transition-duration: 0.4s;
        transition-duration: 0.4s;
        color: green;
    }

        .guncellemebuton:hover {
            background-color: green;
            color: white;
        }

    .detaylamabuton {
        -webkit-transition-duration: 0.4s;
        color: #39ded8;
        transition-duration: 0.4s;
    }

        .detaylamabuton:hover {
            background-color: #1e4e4c;
            color: white;
        }

    .silmebuton {
        -webkit-transition-duration: 0.4s;
        color: red;
        transition-duration: 0.4s;
    }

        .silmebuton:hover {
            background-color: red;
            color: white;
        }
</style>