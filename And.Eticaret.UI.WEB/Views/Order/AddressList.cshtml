@model IEnumerable<And.Eticaret.Core.Model.Entity.UserAddress>

@{
    ViewBag.Title = "AddressList";
}

<h2>Adres Listeniz</h2>

<p>
    <a href="/Order/CreateUserAddress" class="btn btn-success"><i class="fas fa-map-marked-alt"></i> Yeni Adres Ekle</a>
    @*@Html.ActionLink("Yeni Adres Ekle", "CreateUserAddress")*@
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Başlık
        </th>
        <th>
            Şehir
        </th>
        <th>
            Adres
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>

            <td>
                @Html.ActionLink("Seç", "CreateOrder", new { id = item.ID }, new { @class = "btn btn-default secmeislemi", style = "border: 2px solid red;" })
            </td>
        </tr>
    }

</table>
